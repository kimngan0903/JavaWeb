<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC

"-//Hibernate/Hibernate Configuration DTD 3.0//EN"

"http://www.hibernate.org/dtd/hibernate-configuration-
3.0.dtd">

<hibernate-configuration>
<session-factory>
<property
name="hibernate.connection.driver_class">com.microsoft.sqlserver.jd
bc.SQLServerDriver</property>
<property
name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
<property
name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=Lab05_Hibernate</property>
<property
name="hibernate.connection.username">sa</property>
<property
name="hibernate.connection.password">123456</property>
</session-factory>
</hibernate-configuration>